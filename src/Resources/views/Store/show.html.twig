{% extends '@PatchlevelEventSourcing/layout.html.twig' %}

{% block content %}
    <h1>Store</h1>

    <div class="filter">
        <form action="{{ path('patchlevel_eventsourcing_store_show') }}">
            <select name="aggregate">
                <option value="">All</option>
                {% for aggregate in aggregates %}
                    <option {% if app.request.get('aggregate') == aggregate %}selected{% endif %} value="{{ aggregate }}">{{ aggregate }}</option>
                {% endfor %}
            </select>

            <input name="aggregateId" value="{{ app.request.get('aggregateId') }}">

            <button type="submit">Filter</button>
            <a class="button" href="{{ path('patchlevel_eventsourcing_store_show') }}">Clear</a>
        </form>
    </div>

    <table class="table">

        <tbody>
        <tr>
            <th>#</th>
            <th>Aggregate</th>
            <th>Aggregate Id</th>
            <th>Playhead</th>
            <th>Event</th>
            <th>Recorded On</th>
            <th></th>
        </tr>
        </tbody>

        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ messages.index }}</td>
                <td>
                    <a href="{{ path('patchlevel_eventsourcing_store_show', {aggregate: eventsourcing_aggregate_name(message)}) }}">
                        {{ eventsourcing_aggregate_name(message) }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('patchlevel_eventsourcing_store_show', {aggregate: eventsourcing_aggregate_name(message), aggregateId: message.aggregateId}) }}">
                        {{ message.aggregateId }}
                    </a>
                </td>
                <td>{{ message.playhead }}</td>
                <td>{{ eventsourcing_event_name(message) }}</td>
                <td>{{ message.recordedOn|date }}</td>
                <td>
                    <button data-modal="modal-{{ loop.index }}">show</button>
                    <dialog id="modal-{{ loop.index }}">
                        <table class="table">
                            <tbody>
                            <tr>
                                <td>#</td>
                                <td>
                                    {{ messages.index }}
                                </td>
                            </tr>
                            <tr>
                                <td>Aggregate</td>
                                <td>
                                    {{ eventsourcing_aggregate_name(message) }}
                                </td>
                            </tr>
                            <tr>
                                <td>Aggregate Class</td>
                                <td>
                                    {{ message.aggregateClass }}
                                </td>
                            </tr>
                            <tr>
                                <td>Aggregate Id</td>
                                <td>
                                    {{ message.aggregateId }}
                                </td>
                            </tr>
                            <tr>
                                <td>Aggregate Playhead</td>
                                <td>
                                    {{ message.playhead }}
                                </td>
                            </tr>
                            <tr>
                                <td>Event Name</td>
                                <td>
                                    {{ eventsourcing_event_name(message) }}
                                </td>
                            </tr>
                            <tr>
                                <td>Event Class</td>
                                <td>
                                    {{ eventsourcing_event_class(message) }}
                                </td>
                            </tr>
                            <tr>
                                <td>Event Payload</td>
                                <td>
                                    <div class="json">
                                    {{~ eventsourcing_event_payload(message) ~}}
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Recorded on</td>
                                <td>{{ message.recordedOn|date }}</td>
                            </tr>
                            <tr>
                                <td>Custom Headers</td>
                                <td>
                                    <div class="json">
                                    {{~ message.customHeaders|json_encode(constant('JSON_PRETTY_PRINT')) ~}}
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <form method="dialog">
                            <button>Close</button>
                        </form>
                    </dialog>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include '@PatchlevelEventSourcing/pagination.html.twig' with {
        page: page,
        count: count,
        limit: limit,
    } only %}

    <script>
        document.querySelectorAll('[data-modal]').forEach(function (button) {
            button.addEventListener('click', function () {
                var dialog = document.getElementById(button.dataset.modal);
                dialog.showModal();
                dialog.querySelector('button').addEventListener('click', function () {
                    dialog.close();
                });
            });
        });
    </script>

{% endblock %}
